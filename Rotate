template <typename T>
void swap(T &a, T &b)
{
	T c(a);
	a = b;
	b = c;
}

template <typename T>
void rotate(T begin, T end, int k)
{
	if (begin != end--)
	{
		if (k > 0)
		{
			for (size_t i = 1; i <= k; i++)
			{
				T temp(begin);
				while (begin != end)
				{
					swap(*begin++, *end);
				}
				begin = temp;
			}
		}
		else if (k < 0)
		{
			for (size_t i = -1; i >= k; i--)
			{
				T temp(end);
				while (begin != end)
				{
					swap(*begin, *end--);
				}
				end = temp;
			}
		}
	}
}
